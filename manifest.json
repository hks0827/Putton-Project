{
  "manifest_version": 3,
  "name": "3D Button Effects",
  "version": "1.0.0",
  "description": "웹사이트 버튼에 멋진 3D 효과를 자동으로 적용합니다",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "utils/site-analyzer.js",
        "utils/style-recommender.js",
        "content/content.js"
      ],
      "css": [
        "content/styles/base.css",
        "content/styles/classic.css",
        "content/styles/neon.css",
        "content/styles/glass.css",
        "content/styles/metallic.css"
      ],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "3D Button Effects",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "background": {
    "service_worker": "background/service-worker.js"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "host_permissions": [
    "<all_urls>"
  ]
}